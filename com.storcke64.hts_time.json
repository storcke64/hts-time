{
    "app-id": "com.storcke64.hts_time",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "command": "hts-time",
    "build-options": {
        "strip": false,
        "no-debuginfo": true
    },
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--socket=session-bus",
        "--share=network"
    ],
    "modules": [
        {
            "name": "libqrencode",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fukuchi/libqrencode.git",
                    "tag": "v4.1.1"
                }
            ]
        },
        {
            "name": "hts-time",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}